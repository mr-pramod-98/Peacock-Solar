<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recycler_view_item_background_style_white"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="Do you know the capacity?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium" />

    <Button
        android:id="@+id/button_yes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:text="Yes I know the capacity"
        android:background="@drawable/button_background_style_blue" />

    <Button
        android:id="@+id/button_no"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:text="I don't know the capacity"
        android:background="@drawable/button_background_style_blue" />

</LinearLayout>